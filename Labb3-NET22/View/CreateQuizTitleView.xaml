<UserControl x:Class="Labb3_NET22.View.CreateQuizTitleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Labb3_NET22.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Labb3_NET22.ViewModel"
             d:DataContext="{d:DesignInstance viewModels:CreateQuizTitleViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="#FF656565">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            FontSize="18"
            Text="{Binding QuizTitle, UpdateSourceTrigger=PropertyChanged}"/>

        <Button
            Grid.Row="1"
            Grid.Column="2"
            Command="{Binding createQuizCommand}">
            Save 
        </Button>

    </Grid>
</UserControl>
